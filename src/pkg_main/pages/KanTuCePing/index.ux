<template>
  <div class="page_container">
    <!-- 顶部固定区域 -->
    <div class="top_area">
      <image class="top_bg" src="/assets/img/tupianceshi-bg.png"></image>

      <!-- 导航栏 -->
      <div class="navbar">
        <div class="back_btn" onclick="goBack">
          <image class="back_icon" src="/assets/img/back.png"></image>
        </div>
        <text class="page_title">图片测试</text>
      </div>

      <!-- 装饰人物图 -->
      <image class="character_img" src="/assets/img/character_cow.png"></image>
    </div>

    <!-- 序号 Badge -->
    <div class="badge_wrapper">
      <!-- 模仿截图中的题目区域头部 -->
      <div class="question_header_row">
        <image class="q_icon" src="/assets/img/question_mark.png"></image>
        <text class="question_title_text">{{ quizTitle }}</text>
      </div>
    </div>

    <!-- 主要内容区域 (进度条 + 题目图片 + 选项) -->
    <div class="content_card">
      <div class="progress_area">
        <text class="progress_text"
          ><span style="color:#ff7500; font-weight:bold;">1</span>/1</text
        >
        <div class="progress_bar_bg">
          <div class="progress_bar_fill"></div>
        </div>
      </div>

      <text class="question_desc">{{ currentQuestion.question }}</text>

      <!-- 题目图片 -->
      <div class="question_img_wrapper">
        <image
          class="question_img"
          src="/assets/img/kantu_placeholder.png"
        ></image>
        <div class="img_placeholder_text">
          <text class="placeholder_label">图片占位符</text>
        </div>
      </div>

      <!-- 选项列表 -->
      <div class="options_list">
        <div
          class="option_item {{selectedOptionIndex === index ? 'option_selected' : ''}}"
          for="{{(index, option) in currentQuestion.options}}"
          onclick="selectOption(index)"
        >
          <text class="option_text">{{ option.label }}.{{ option.text }}</text>
        </div>
      </div>

      <!-- 底部确认按钮 -->
      <div class="confirm_btn_wrapper">
        <div class="confirm_btn" onclick="onConfirm">
          <text class="confirm_text">查看结果</text>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
import router from '@system.router'
import prompt from '@system.prompt'
import { imageQuizData } from '../../../helper/kantu.js'

export default {
  protected: {
    id: 0
  },
  private: {
    quizTitle: '',
    currentQuestion: {},
    selectedOptionIndex: -1,
    quizItem: null,
    questionImage: ''
  },
  onInit() {
    console.info('KanTu Detail Page Init, ID:', this.id)
    this.initData()
  },
  initData() {
    const quizId = parseInt(this.id) || 1
    this.quizItem = imageQuizData.find(item => item.id === quizId)

    if (this.quizItem) {
      this.quizTitle = this.quizItem.title
      this.currentQuestion = {
        question: this.quizItem.question,
        options: this.quizItem.options
      }

      if (quizId === 3) {
        this.questionImage = '/assets/img/kantu_stars.png'
      } else {
        this.questionImage = '/assets/img/kantu_q' + quizId + '.png'
      }
    } else {
      if (imageQuizData && imageQuizData.length > 0) {
        this.quizItem = imageQuizData[0]
        this.quizTitle = this.quizItem.title
        this.currentQuestion = {
          question: this.quizItem.question,
          options: this.quizItem.options
        }
      }
    }
  },
  goBack() {
    router.back()
  },
  selectOption(index) {
    this.selectedOptionIndex = index
  },
  onConfirm() {
    if (this.selectedOptionIndex === -1) {
      prompt.showToast({
        message: '请选择一个选项'
      })
      return
    }

    const currentOption = this.currentQuestion.options[this.selectedOptionIndex]
    const label = currentOption.label

    let resultDesc = ''
    if (this.quizItem.conclusions) {
      const conclusion = this.quizItem.conclusions.find(c => c.label === label)
      if (conclusion) {
        resultDesc = conclusion.description
      }
    }

    if (!resultDesc) {
      resultDesc = '暂无详细结论'
    }

    router.replace({
      uri: '/pkg_main/pages/KanTuCePing/result',
      params: {
        description: resultDesc,
        quizId: this.id
      }
    })
  }
}
</script>

