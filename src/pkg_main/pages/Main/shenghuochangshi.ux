<template>
  <div class="page_container">
    <div class="content">
      <!-- 顶部背景�?-->
      <image class="bg_image" src="/pkg_main/assets/img/shenghuochangshi-bg.png"></image>

      <!-- 内容层，覆盖在背景之�?-->
      <div class="main_content">
        <!-- 答题记录卡片 -->
        <div class="stat_card">
          <text class="stat_title">答题记录</text>
          <div class="stat_row">
            <div class="stat_item">
              <text class="stat_num">{{ todayCorrect }}</text>
              <text class="stat_label">今日答对题数</text>
            </div>
            <div class="stat_item stat_item_middle">
              <text class="stat_num">{{ correctRate }}</text>
              <text class="stat_label">答题正确率</text>
            </div>
            <div class="stat_item">
              <text class="stat_num">{{ totalDays }}</text>
              <text class="stat_label">累计答题天数</text>
            </div>
          </div>
        </div>

        <!-- 开始答题按钮 -->
        <div class="start_btn" onclick="startQuiz">
          <text class="start_text">开始答题</text>
        </div>
      </div>
    </div>
  </div>
</template>

<script>
import prompt from '@system.prompt'
import router from '@system.router'
import storage from '@system.storage'

export default {
  props: {
    isActive: {
      type: Boolean,
      default: false
    }
  },
  data() {
    return {
      todayCorrect: 0, // 今日答对题数
      correctRate: '0%', // 答题正确率
      totalDays: 0 // 累计答题天数
    }
  },
  onInit() {
    console.log('<<< 生活常识组件初始化')
    this.loadStats()
  },
  onShow() {
    console.log('<<< 生活常识组件显示，刷新数据')
    // 每次显示时刷新数据
    this.loadStats()
  },
  // 监听 isActive 属性变�?
  onPropsChange(newVal, oldVal, changedProps) {
    if (changedProps.includes('isActive') && newVal.isActive) {
      console.log('<<< 生活常识标签页激活，刷新数据')
      this.loadStats()
    }
  },
  loadStats() {
    console.log('开始加载答题统计数据')
    // 从 localStorage 读取数据
    storage.get({
      key: 'shcs_todayCorrect',
      success: data => {
        this.todayCorrect = parseInt(data) || 0
        console.log('今日答对题数:', this.todayCorrect)
      },
      fail: () => {
        this.todayCorrect = 0
        console.log('今日答对题数: 0 (未找到数据)')
      }
    })

    storage.get({
      key: 'shcs_correctRate',
      success: data => {
        this.correctRate = data || '0%'
        console.log('答题正确率:', this.correctRate)
      },
      fail: () => {
        this.correctRate = '0%'
        console.log('答题正确率: 0% (未找到数据)')
      }
    })

    storage.get({
      key: 'shcs_totalDays',
      success: data => {
        this.totalDays = parseInt(data) || 0
        console.log('累计答题天数:', this.totalDays)
      },
      fail: () => {
        this.totalDays = 0
        console.log('累计答题天数: 0 (未找到数据)')
      }
    })
  },
  startQuiz() {
    router.push({
      uri: 'pkg_main/pages/ShengHuoChangShi/Quiz'
    })
  }
}
</script>

