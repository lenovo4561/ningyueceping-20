    <div class="bottom_area">
      <div class="btn_wrapper">
        <div class="btn_image_wrapper" onclick="restartTest">
          <image class="btn_image" src="/assets/img/cxcp.png"></image>
        </div>
        <div class="btn_image_wrapper" onclick="goHome">
          <image class="btn_image" src="/assets/img/fhsy.png"></image>
