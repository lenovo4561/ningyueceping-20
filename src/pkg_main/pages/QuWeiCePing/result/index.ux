</template>

<script>
import router from '@system.router'

export default {
  public: {
    description: '',
    quizId: ''
  },
  onInit() {
    console.info(
      'Result Page Init, description:',
      this.description,
      'quizId:',
      this.quizId
    )
    // 从路由参数接收结论内容
    if (!this.description || this.description === '') {
      this.description = '暂无测评结果'
    }
  },
  goBack() {
    router.clear()
    router.push({
      uri: '/pkg_main/pages/Main'
    })
  },
  restartTest() {
    // 重新开始测评，跳转回测评页面
    router.replace({
      uri: '/pkg_main/pages/QuWeiCePing',
      params: {
        id: this.quizId || '1'
      }
    })
  },
  goHome() {
    // 返回首页 Main/index
    router.clear()
    router.push({
      uri: '/pkg_main/pages/Main'
    })
  }
}
</script>

